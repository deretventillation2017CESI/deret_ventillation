{% extends 'default/layout.html.twig' %}

{% block title %}Liste des ventilations{% endblock %}

{% block main %}

    {% if ventilation %}
    <div class="col-lg-4">
        <h1>Activité journalière saisie</h1>
        <table border="1">
            <tr>
                <th>Métier</th>
                <th>Type Produit</th>
                <th>Quantite</th>
                <th>Temps</th>
                <th>Commentaire</th>
            </tr>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.metier }}</td>
                <td>{{ activite.typeProduit }}</td>
                <td>{{ activite.quantite }}</td>
                <td>{{ activite.temps }}</td>
                <td>{{ activite.commentaire }}</td>
            </tr>
        {% endfor %}
        </table>

        <label>Temps passée : {{ tempsActivite }}</label>
    </div>
    <div class="col-lg-4">
        <h1>Autre Activité journalière saisie</h1>
        <table border="1">
            <tr>
                <th>Activite</th>
                <th>Temps</th>
                <th>Commentaire</th>
            </tr>
            {% for autreactivite in autreActivites %}
                <tr>
                    <td>{{ autreactivite.activite }}</td>
                    <td>{{ autreactivite.temps }}</td>
                    <td>{{ autreactivite.commentaire }}</td>
                </tr>
            {% endfor %}
        </table>

        <label>Temps passée : {{ tempsAutreActivite }}</label>
    </div>
    <div class="col-lg-4">
        <h1>Anomalie journalière saisie</h1>
        <table border="1">
            <tr>
                <th>Anomalie</th>
                <th>Type Produit</th>
                <th>Fabricant</th>
                <th>Reférence</th>
                <th>Code Défaut</th>
                <th>Quantite</th>
                <th>Temps</th>
                <th>Commentaire</th>
            </tr>
            {% for anomalie in anomalies %}
                <tr>
                    <td>{{ anomalie.anomalie }}</td>
                    <td>{{ anomalie.typeProduit }}</td>
                    <td>{{ anomalie.fabricant }}</td>
                    <td>{{ anomalie.reference }}</td>
                    <td>{{ anomalie.codeDefaut }}</td>
                    <td>{{ anomalie.quantite }}</td>
                    <td>{{ anomalie.temps }}</td>
                    <td>{{ anomalie.commentaire }}</td>
                </tr>
            {% endfor %}
        </table>

        <label>Temps passée : {{ tempsAnomalie }}</label>
    </div>
    <h1>Temps journalier : {{ tempsJournalier }}</h1>
    {% endif %}
{% endblock %}
