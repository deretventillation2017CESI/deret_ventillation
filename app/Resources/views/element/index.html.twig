{% extends 'default/layout.html.twig' %}

{% block title %}Gestion des éléments{% endblock %}

{% block main -%}
    <div class="row" style='margin-top: 1%;'>
        <div class="col-md-8 col-md-offset-2 titre text-center">
            <h1>Liste des éléments</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 col-md-offset-1 text-center">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th style="text-align: center;">Id</th>
                        <th style="text-align: center;">Libelle</th>
                        <th style="text-align: center;">Type d'élément</th>
                        <th style="text-align: center;">Obligatoire</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for element in elements %}
                    <tr>
                        <td><a href="{{ path('element_show', { 'id': element.id }) }}">{{ element.id }}</a></td>
                        <td>{{ element.libelle }}</td>
                        <td>{{ element.typeElement }}</td>
                        <td>{% if element.obligatoire %}Oui{% else %}Non{% endif %}</td>
                        <td>
                            <a href="{{ path('element_show', { 'id': element.id }) }}"><button type="button" class="btn btn-success">
                                <span class="glyphicon glyphicon-search"></span> Voir
                            </button></a>
                            <a href="{{ path('element_edit', { 'id': element.id }) }}"><button type="button" class="btn btn-info">
                                <span class="glyphicon glyphicon-pencil"></span> Modifier
                            </button></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row text-center">
        <a href="{{ path('element_new') }}"><button type="button" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus-sign"></span> Créer un nouveau élément
        </button></a>
    </div>
{% endblock %}
