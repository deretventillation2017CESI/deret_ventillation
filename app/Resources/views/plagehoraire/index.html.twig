{% extends 'default/layout.html.twig' %}

{% block title %}Gestion des plages horaires{% endblock %}

{% block main -%}
    <div class="row" style='margin-top: 1%;'>
        <div class="col-md-8 col-md-offset-2 titre text-center">
            <h1>Liste des plages horaires</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 col-md-offset-1 text-center">
            <table class="table text-center">
                <thead>
                <tr>
                    <th class="hidden" style="text-align: center;">Id</th>
                    <th style="text-align: center;">Libelle</th>
                    <th style="text-align: center;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for typeHoraire in typeHoraires %}
                    <tr>
                        <td><a href="{{ path('typeHoraire_show', { 'id': typeHoraire.id }) }}">{{ poste.id }}</a></td>
                        <td>{{ typeHoraire.libelle }}</td>
                        <td>
                            <a href="{{ path('typeHoraire_show', { 'id': typeHoraire.id }) }}">
                                <button type="button" class="btn btn-success">
                                    <span class="glyphicon glyphicon-search"></span> Voir
                                </button>
                            </a>
                            <a href="{{ path('typeHoraire_edit', { 'id': typeHoraire.id }) }}">
                                <button type="button" class="btn btn-info">
                                    <span class="glyphicon glyphicon-pencil"></span> Modifier
                                </button>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row text-center">
        <a href="{{ path('typeHoraire_new') }}">
            <button type="button" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus-sign"></span> Cr√©er une nouvelle plage horraire
            </button>
        </a>
    </div>
{% endblock %}