{% extends 'default/layout.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block main -%}
    <div class="row" style='margin-top: 1%;'>
        <div class="col-md-8 col-md-offset-2 titre text-center">
            <h1>Liste des utilisateurs</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 col-md-offset-1 text-center">
            <table class="table text-center">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Statut</th>
                    <th>Identifiant ige</th>
                    <th>Responsable</th>
                    <th>Nbheure theorique session</th>
                    <th>Date de création</th>
                    <th>Contrat</th>
                    <th>Plage horaire</th>
                    <th>Secteur</th>
                    <th>Bâtiment</th>
                    <th>Poste</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for utilisateur in utilisateurs %}
                    <tr>
                        <td><a href="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}">{{ utilisateur.id }}</a>
                        </td>
                        <td>{{ utilisateur.nom }}</td>
                        <td>{{ utilisateur.prenom }}</td>
                        <td>{% if utilisateur.statut %}Oui{% else %}Non{% endif %}</td>
                        <td>{{ utilisateur.identifiantIGE }}</td>
                        <td>{% if utilisateur.responsable %}Oui{% else %}Non{% endif %}</td>
                        <td>{{ utilisateur.nbHeureTheoriqueSession }}</td>
                        <td>{% if utilisateur.dateCreation %}{{ utilisateur.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ utilisateur.contrat }}</td>
                        <td>{{ utilisateur.typeHoraire }}</td>
                        <td>{{ utilisateur.secteur }}</td>
                        <td>{{ utilisateur.batiment }}</td>
                        <td>{{ utilisateur.poste }}</td>
                        <td>
                            <a href="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}">
                                <button type="button" class="btn btn-success">
                                    <span class="glyphicon glyphicon-search"></span> Voir
                                </button>
                            </a>
                            <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}">
                                <button type="button" class="btn btn-info">
                                    <span class="glyphicon glyphicon-pencil"></span> Modifier
                                </button>
                            </a>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row text-center">
        <a href="{{ path('fos_user_registration_register') }}">
            <button type="button" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus-sign"></span> Créer un nouvel utilisateur
            </button>
        </a>
    </div>

{% endblock %}
