<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Titre de la page</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% stylesheets '@css_default'
                       '@bootstrap_css'
            filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body><div class="container-fluid">
            <div class="row">
                {% block header %}
                    {% include 'default/header.html.twig' %}
                {% endblock %}
            </div>
            <div class="alert alert-success" style="opacity: 500; display: none;"></div>
            <div class="alert alert-info" style="opacity: 500; display: none;"></div>
            <div class="alert alert-warning" style="opacity: 500; display: none;"></div>
            <div class="alert alert-danger" style="opacity: 500; display: none;"></div>
            <div class="container">

                {% block main   %}
                {% endblock %}
            </div>
            <div class="row">
                {% block footer %}
                    {% include 'default/footer.html.twig' %}
                {% endblock %}
            </div>
        </div>

    </body>
    {% block javascripts %}
        {% javascripts 
        '@js_default'
        '@bootstrap_css'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</html>